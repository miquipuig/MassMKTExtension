{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "WhatsenderExtension",
    "version": "1.0",
    "description": "WhatsenderExtension",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "notifications", "http://*/*", "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "WhatsenderExtension"

    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "content.js"
        ]
    }],
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "manifest_version": 2
    
}